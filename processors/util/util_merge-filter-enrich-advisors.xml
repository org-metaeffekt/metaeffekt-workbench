    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-processors</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../workbench-parent.xml</relativePath>
    </parent>

    <artifactId>transform-merge-filter-enrich-advisors</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.artifact.analysis</groupId>
                <artifactId>ae-inventory-enrichment-plugin</artifactId>
                <version>${ae.artifact.analysis.version}</version>
                <executions>
                    <!-- Merge the individual advisor inventories into a single one; with filters -->
                    <execution>
                        <id>merge-inventories-with-filters</id>
                        <goals>
                            <goal>merge-advisor-inventories</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <referenceInventories>${inventories}</referenceInventories>
                            <vulnerabilityAdvisoryFilter>${vulnerabilityAdvisoryFilter}</vulnerabilityAdvisoryFilter>
                            <inventoryOutputFile>${filteredInventoryFile}</inventoryOutputFile>

                            <!-- THIS IS CORRECT: Transformations do not use the 0.135.x branch so we need the new policy. -->
                            <securityPolicy>
                                <files>
                                    <file>${input.security.policy.file}</file>
                                </files>
                            </securityPolicy>
                        </configuration>
                    </execution>

                    <execution>
                        <!-- Queries the recent advisories on the pre-filtered inventory -->
                        <id>enrich-latest-advisories</id>
                        <goals>
                            <goal>enrich-inventory</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <inventoryInputFile>${filteredInventoryFile}</inventoryInputFile>
                            <intermediateInventoriesDirectory>${project.build.directory}/intermediate-inventories</intermediateInventoriesDirectory>
                            <mirrorDirectory>${inputDatabase}</mirrorDirectory>
                            <advisorPeriodicEnrichment>
                                <active>true</active>
                                <changedSince>1 week</changedSince>
                                <changedUntil>now</changedUntil>

                                <!-- filter advisories; we keep all advisories in to show details also of other advisories -->
                                <filterUnaffected>false</filterUnaffected>

                                <!-- filter unclassified advisories -->
                                <filterUnclassified>true</filterUnclassified>

                                <!-- filter vulnerabilities; limits vulnerabilities to those covered by the recent advisories -->
                                <filterUnaffectedVulnerabilities>true</filterUnaffectedVulnerabilities>

                                <!-- only focus on CERT-FR -->
                                <filterVulnerabilitiesWithoutSpecifiedAdvisory>true</filterVulnerabilitiesWithoutSpecifiedAdvisory>
                            </advisorPeriodicEnrichment>

                            <!-- the output file contains only data related to vulnerabilities with recent advisories from CERT-FR -->
                            <inventoryOutputFile>${enrichmentOutputInventory}</inventoryOutputFile>

                            <!-- THIS IS CORRECT: Transformations do not use the 0.135.x branch so we need the new policy. -->
                            <securityPolicy>
                                <files>
                                    <file>${input.security.policy.file}</file>
                                </files>
                            </securityPolicy>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>enrichmentOutputInventory</property>
                                    <message>
                                        You must set the parameter 'enrichmentOutputInventory' to specify the output directory of the advisory enrichment.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>filteredInventoryFile</property>
                                    <message>
                                        You must set the parameter 'filteredInventoryFile' to specify the file of the filtered inventory.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>vulnerabilityAdvisoryFilter</property>
                                    <message>
                                        You must set the parameter 'vulnerabilityAdvisoryFilter' to specify the advisor to filter the inventory by.
                                    </message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>